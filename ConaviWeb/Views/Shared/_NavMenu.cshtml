@using ConaviWeb.Model
@model IEnumerable<Module>
    <nav class="navbar navbar-inverse sub-navbar navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <button type="button" id="btnCollapsed" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#subenlaces">
                    <span class="sr-only">Interruptor de Navegación</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="https://www.gob.mx/conavi" style="margin-left: 0px;margin-top: -15px;"><i class="icon-cnv red-ic" style="font-size: 60px;"></i></a>
            </div>
            <div class="collapse navbar-collapse" id="subenlaces">

                <ul class="nav navbar-nav navbar-right">

                    @if (Model as List<Module> != null)
                    {
                        @foreach (var module in Model as List<Module>)
                        {
                            <li class="dropdown">
                                <a href="@module.Url">
                                    <span class="@module.Ico"></span><span> @module.Text</span>
                                </a>
                            </li>
                        }
                    }
                    @if (User.Identity.IsAuthenticated)
                    {

                        @*<li class="dropdown"><a><span class="fa fa-user"></span> <span>@User.Identity.Name</span></a></li>*@
                        <li class="dropdown"><a href="../LogOut"><span class="fa fa-sign-out"></span><span> Salir</span></a></li>

                    }
                </ul>

            </div>
        </div>
    </nav>