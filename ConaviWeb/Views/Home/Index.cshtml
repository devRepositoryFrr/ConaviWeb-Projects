@model List<ConaviWeb.Model.Catalogo>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Inicio";
}
<style>
    .top-buffer-x25 {
        margin-top: 25px;
    }

    .modulos-dac {
        max-height: 100vh;
        overflow: auto;
        height: auto;
        background: #f5f5f5;
        padding: 15px;
        border: #dfdfdf;
        border-style: solid;
        border-width: 1px;
        width: max-content;
    }

    .modulo-ic {
        font-size: 16px;
        color: gray;
    }

    .back-dac {
        max-width: 100%;
        width: 770px;
        /* content: url('../img/back.jpg') !important;*/
        background-size: contain !important;
    }

    .btn-atendida {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: fit-content;
        padding: 3px;
        border-radius: 4px;
        background: #dff0d8;
    }

    #solicitudes {
        max-height: 100vh;
    }

    .separador_ {
        margin: 10px 0 10px;
        border-top-color: #B38E5D;
    }

    .mginbotm {
        margin-bottom: 7px !important;
    }

    .bottom-buffer {
        margin-bottom: 64px;
    }

    .img-xs {
        width: 50px;
        height: 50px;
        margin-right: 15px;
        margin-left: 15px;
    }

        .img-xs:hover {
            filter: grayscale(2);
            transform: scale(1.1);
            transition: all .5s linear;
        }
</style>

<div class="row">
    @*<div class="col-md-4 top-buffer-x25">
        </div>*@
    <div class="col-md-4 col-md-offset-4">
        <div class="modulos-dac ">
            <p class="modulo-ic"><i class="fas fa-bars"></i> Menú <strong>Sistema Integral CONAVI</strong></p>
            <hr class="separador_">
            <p class="bottom-buffer"></p>
            <div>
                <div id="modulos">
                    @foreach (var item in Model)
                    {
                    
                    <a href='@Url.Action("Index", "Login", new { nameSystem = item.Descripcion })'>
                        <p style="font-size:20px;text-align:left; color:gray" class="ic-modulos enlace"><i class="@item.Ico"></i> @item.Descripcion</p>
                    </a>
                    }
                    @*<a href='@Url.Action("Index", "Login", new { nameSystem = "ProcesoED" })'>
                        <p style="font-size:20px;text-align:left; color:gray" class="ic-modulos enlace"><i class="fa fa-unlock"></i> Cifrado de Archivos Bancarios</p>
                    </a>
                    <a href='https://firmaelectronica.conavi.gob.mx:9090/'>
                        <p style="font-size:20px;text-align:left; color:gray" class="ic-modulos enlace"><i class="fa fa-pencil-square-o"></i> Firma Electrónica</p>
                    </a>
                    <a href='@Url.Action("Index", "Login", new { nameSystem = "RH" })'>
                        <p style="font-size:20px;text-align:left; color:gray" class="ic-modulos enlace"><i class="fa fa-users"></i> Portal Servidores Públicos</p>
                    </a>*@
                </div>
            </div>
        </div>
    </div>
    @*<div class="col-md-4 top-buffer-x25">
        </div>*@
</div>
