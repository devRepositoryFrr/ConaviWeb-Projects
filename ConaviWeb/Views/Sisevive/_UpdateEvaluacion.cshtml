@model ConaviWeb.Model.Sisevive.EvalCustom
<script src="~/js/jquery-1.11/jquery.min.js" type="text/javascript"></script>

<form id="formUpdateEvaluacion" enctype="multipart/form-data" method="post" asp-controller="Admin" asp-action="UpdateEvaluation">
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"><button class="close" data-dismiss="alert" aria-hidden="true">&times;</button></div>
    <div class='modal-header'>
        <h4 id='titulo-modal' style="font-weight: 300">Actualizar Evaluación</h4>
    </div>
    <div class='modal-body' style="height: 550px; overflow-x: hidden; overflow-y: auto;">
        <input id="idEvaluacion" asp-for="Id" type="text" class="form-control" style="display:none;">     
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Informe"></label>
                    <select id="slctInforme" asp-for="Informe" class="form-control">
                        <option value="">--Select--</option>
                        <option value="1">Recibido</option>
                        <option value="2">En revisión</option>
                        <option value="3">Aprobado</option>
                        <option value="4">Rechazado</option>
                    </select>
                </div>
                <span id="slctInforme-error" class="text-danger field-validation-error" data-valmsg-for="Informe" data-valmsg-replace="true" style="display:none">
                <span class="">El campo Informe es requerido</span>
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Observacion"></label>
                    <textarea name="Observacion" class="form-control" asp-for="Observacion" autocomplete="off" rows="6"> </textarea>
                    <span id="observacion-error" class="text-danger field-validation-error" data-valmsg-for="Observacion" data-valmsg-replace="true" style="display:none">
                        <span class="">El campo Observacion es requerido</span>
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Letra"></label>
                    <select id="slctLetra" asp-for="Letra" class="form-control">
                        <option value="">--Select--</option>
                        <option value="1">a</option>
                        <option value="2">b</option>
                        <option value="3">c</option>
                        <option value="4">d</option>
                        <option value="5">e</option>
                        <option value="6">f</option>
                        <option value="7">g</option>
                    </select>
                </div>
                <span id="letra-error" class="text-danger field-validation-error" data-valmsg-for="Letra" data-valmsg-replace="true" style="display:none">
                    <span class="">El campo Letra es requerido</span>
                </span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ArchivoInforme"></label>
                    <div id="d-sp1" class="file-select" style="height: 50px;">
                        <i id="i-sp1" class="fa fa-file-upload"></i><span id="s-sp1">Cargar un archivo</span>
                        <input asp-for="ArchivoInforme" accept=".pdf" id="f-sp1" type="file" style="visibility: hidden">
                    </div>
                    <span id="archivoInforme-error" class="text-danger field-validation-error" data-valmsg-for="ArchivoInforme" data-valmsg-replace="true" style="display:none;">
                        <span class="">El campo ArchivoInforme es requerido</span>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>





<script>
    $(document).ready(function () {
        $("#formUpdateEvaluacion").submit(function (e) {
            var file = $("#f-sp1").val();
            var slctInfo = $("#slctInforme").val();
            var slctLetra = $("#slctLetra").val();
            var observ = $("#Observacion").val();
            if (slctInfo == "") {
                console.log("Entro al error vacio");
                $("#slctInforme-error").show();
                e.preventDefault();
            }
            else if (slctInfo == 3) {
                console.log("Entro al error aprobado");
                if (slctLetra == "") {
                    $("#letra-error").show();
                    e.preventDefault();
                }
                if (file == "") {
                    $("#archivoInforme-error").show();
                    e.preventDefault();
                }
            }
            else if (slctInfo == 4) {
                console.log("Entro al error rechazado");
                if (observ == "") {
                    $("#observacion-error").show();
                    e.preventDefault();
                }
                if (file == "") {
                    $("#archivoInforme-error").show();
                    e.preventDefault();
                }
            }
            
        });
    });


</script>