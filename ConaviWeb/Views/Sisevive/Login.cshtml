    @section Scripts {@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}}
    <script>
        $(document).ready(function () {
            showAlert();
        });
        $(window).on('beforeunload', function () {
            console.log("before");
            
            $('.spinner').css('display', 'block');
        });

        function showAlert() {

            setTimeout(function () {
                $("#alerta").fadeOut(1500);

            }, 3000);
            setTimeout(function () {

                $("#alerta").remove();
            }, 6000);

        }
    </script>
