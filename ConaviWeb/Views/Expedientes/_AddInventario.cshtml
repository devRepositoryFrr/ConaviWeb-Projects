@model ConaviWeb.Model.Expedientes.Inventario

<form id="formInsertInventarioTPrimaria" enctype="multipart/form-data" method="post" asp-controller="Inventario" asp-action="InsertInventarioTPrimaria">
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"><button class="close" data-dismiss="alert" aria-hidden="true">&times;</button></div>
    <input type="hidden" id="hd_id_inventario" asp-for="Id" value="@ViewBag.IdInv" />
    <div class="row form-group">
        <div class="col-md-8">
            <label class="control-label">Nombre de la Unidad Administrativa:</label>
            <select asp-for="IdPuesto" id="slctPuesto" class="form-control" asp-items="@ViewBag.AreaCatalogo" required>
                <option value="">--Seleccione--</option>
            </select>
        </div>
        <div class="col-md-4 datepicker-group">
            <label for="felaboracion_inventario">Fecha de elaboración del inventario:</label>
            <input asp-for="FechaElaboracion" type="text" id="felaboracion_inventario" value="@ViewBag.FechaElab" placeholder="aaaa/mm/dd" class="form-control" disabled required />
            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-8">
            <label class="control-label">Nombre del responsable del archivo de trámite:</label>
            <input type="text" asp-for="NombreResponsableAT" class="form-control" value="@ViewBag.NombreResponsable" disabled required />
        </div>
        <div class="col-md-4 datepicker-group">
            <label for="ftransferencia_archivo">Fecha de transferencia:</label>
            <input type="text" id="ftransferencia_archivo" asp-for="FechaTransferencia" value="@ViewBag.FechaTra" class="form-control" placeholder="aaaa/mm/dd" readonly />
            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12" id="div_btns_inv">
            <button type="submit" id="btn_save_inv" class="btn btn-default btn-sm pull-right active">
                <span class="fa fa-save"></span> Guardar
            </button>
            <button type="button" id="btn_fto" class="btn btn-sm btn-primary pull-right" title="Formato de Inventario de Transferencia Primaria al Archivo de Concentración" onclick="sendToFormat()">
                <span class="fa fa-print"></span> Formato
            </button>
        </div>
    </div>
</form>

<script src="https://framework-gb.cdn.gob.mx/assets/scripts/jquery-ui-datepicker.js"></script>
<script>
    $(document).ready(function () {
        $('#ftransferencia_archivo').datepicker({
            dateFormat: 'yy/mm/dd',
            changeYear: true
        });

        $("#formInsertInventarioTPrimaria").submit(function (e) {
            const fecha1 = new Date($("#felaboracion_inventario").val());
            const fecha2 = new Date($("#ftransferencia_archivo").val());
            if (fecha2 < fecha1) {
                $("#alertAjax").append("<div class='alertaOp alert alert-warning' id='alerta'>La fecha de transferencia no debe ser menor a la fecha de elaboración!</div>");
                showAlert();
                return false;
            }
        });
    });
</script>