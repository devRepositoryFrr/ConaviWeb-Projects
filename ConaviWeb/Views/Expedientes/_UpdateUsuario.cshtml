@model ConaviWeb.Model.User
<script src="~/js/jquery-1.11/jquery.min.js" type="text/javascript"></script>

<form id="formUpdateUsuario" enctype="multipart/form-data" method="post" asp-controller="Catalogos" asp-action="UpdateUsuario">
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"><button class="close" data-dismiss="alert" aria-hidden="true">&times;</button></div>
    <div class='modal-header'>
        <h4 id='titulo-modal' style="font-weight: 300">Registro de usuario</h4>
    </div>
    <div class='modal-body'>
        <input id="idUsuario" asp-for="Id" type="text" class="form-control" style="display:none;">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="lbl_name">Nombre:</label>
                    <input type="text" id="lbl_name" asp-for="Name" class="form-control" required />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="lbl_papellido">Primer apellido:</label>
                    <input type="text" id="lbl_papellido" asp-for="LName" class="form-control" required />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="lbl_sapellido">Segundo apellido:</label>
                    <input type="text" id="lbl_sapellido" asp-for="SLName" class="form-control" required />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="lbl_area">Area:</label>
                    <select asp-for="IdSystem" id="lbl_area" class="form-control" asp-items="@ViewBag.AreaCatalogo" required>
                        <option value="">--Seleccione--</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="lbl_cargo">Cargo:</label>
                    <select asp-for="Position" id="lbl_cargo" class="form-control" asp-items="@ViewBag.CargoCatalogo" required>
                        <option value="">--Seleccione--</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="lbl_numEmpleado">Número de empleado:</label>
                    <input type="number" id="lbl_numEmpleado" asp-for="EmployeeNumber" class="form-control" required />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="lbl_rfc">RFC: </label>
                    <input type="text" id="lbl_rfc" asp-for="RFC" class="form-control" required />
                </div>
            </div>
            <div class="col-md-4">
                <label for="lbl_grado_academico">Grado académico: </label>
                <input type="text" id="lbl_grado_academico" asp-for="Degree" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label for="lbl_email"><span class="fa fa-envelope-o" aria-hidden="true"></span></label>
                <input type="text" id="lbl_email" asp-for="Email" class="form-control" required />
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="lbl_username">Usuario:</label>
                    <input type="text" id="lbl_username" asp-for="SUser" class="form-control" required />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="lbl_password">Password: <span class="fa fa-info-circle" title="Solo si requiere cambiar la contraseña, edite este campo."></span></label>
                    <input type="password" id="lbl_password" asp-for="Password" class="form-control" placeholder="******" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="slc_rol">Tipo de usuario: </label>
                    <select id="slc_rol" asp-for="Rol" class="form-control">
                        <option value="1">Administrador</option>
                        <option value="2" selected>Operador</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
            <span class="fa fa-times" aria-hidden="true"></span> Cancelar
        </button>
        <button type="submit" class="btn btn-primary btn-sm">
            <span class="fa fa-paper-plane-o" aria-hidden="true"></span> Enviar
        </button>
    </div>
</form>

<script>
    $(document).ready(function () {
        $("#formUpdateUsuario").submit(function (e) {
            
        });
    });
</script>